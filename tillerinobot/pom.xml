<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.tillerino.osu</groupId>
		<artifactId>tillerinobot-parent</artifactId>
		<version>0.20.0</version>
		<relativePath>..</relativePath>
	</parent>
	<artifactId>tillerinobot</artifactId>
	<name>Core</name>
	<description>The core of Tillerinobot: command handling, languages, recommendations, pp, APIs</description>

	<build>
		<plugins>
			<plugin>
				<groupId>com.github.kongchen</groupId>
				<artifactId>swagger-maven-plugin</artifactId>
				<!-- mvn -f tillerinobot com.github.kongchen:swagger-maven-plugin:generate && cp tillerinobot/target/generated-swagger/swagger.yaml docs/swagger/swagger.yml -->
				<configuration>
					<apiSources>
						<apiSource>
							<locations>tillerino.tillerinobot.rest</locations>
							<swaggerDirectory>${project.build.directory}/generated-swagger/</swaggerDirectory>
							<info>
								<title>ppaddict API</title>
								<version>0.1</version>
							</info>
							<useJAXBAnnotationProcessor>true</useJAXBAnnotationProcessor>
							<outputFormats>yaml</outputFormats>
						</apiSource>
					</apiSources>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>${jacoco.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>prepare-agent</goal>
						</goals>
					</execution>
					<execution>
						<id>report</id>
						<phase>test</phase>
						<goals>
							<goal>report</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<!-- Run with goal org.pitest:pitest-maven:mutationCoverage. Since the 
					mutation tests take quite long, they're not currently enabled in CI. -->
				<groupId>org.pitest</groupId>
				<artifactId>pitest-maven</artifactId>
				<version>1.3.2</version>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<!-- Internal -->
		<dependency>
			<groupId>org.tillerino.osu</groupId>
			<artifactId>tillerinobot-model</artifactId>
		</dependency>
		<dependency>
			<groupId>org.tillerino.osu</groupId>
			<artifactId>tillerinobot-rabbit</artifactId>
		</dependency>

		<!-- APIs and annotations -->
		<dependency>
			<groupId>jakarta.ws.rs</groupId>
			<artifactId>jakarta.ws.rs-api</artifactId>
